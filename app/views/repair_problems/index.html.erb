<p id="notice"><%= notice %></p>

<h1>Repair Problems</h1>

<table>
  <thead>
    <tr>
      <th>Repair</th>
      <th>Problem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repair_problems.each do |repair_problem| %>
      <tr>
        <td><%= repair_problem.repair %></td>
        <td><%= repair_problem.problem %></td>
        <td><%= link_to 'Show', repair_problem %></td>
        <td><%= link_to 'Edit', edit_repair_problem_path(repair_problem) %></td>
        <td><%= link_to 'Destroy', repair_problem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

